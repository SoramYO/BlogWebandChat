<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <%- include('layout/head') %>
</head>

<body>
    <%- include('layout/navbar') %>

        <!-- create table to manage user  -->
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>Users</h1>
                    <a href="/admin/user/new" class="btn btn-primary">Create user</a>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Email</th>
                                <th scope="col">First Name</th>
                                <th scope="col">Last Name</th>
                                <th scope="col">Created at</th>
                                <th scope="col">Updated at</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%if(data && data.users) { %>
                                <% users=data.users %>
                                    <% users.forEach(user=> { %>
                                        <tr>
                                            <th scope="row">
                                                <%= user.id %>
                                            </th>
                                            <td>
                                                <%= user.email %>
                                            </td>
                                            <td>
                                                <%= user.first_name %>
                                            </td>
                                            <td>
                                                <%= user.last_name %>
                                            </td>
                                            <td>
                                                <%= user.created_at %>
                                            </td>
                                            <td>
                                                <%= user.updated_at %>
                                            </td>
                                            <td>
                                                <a href="/admin/user/edit/<%= user.id %>"
                                                    class="btn btn-warning">Edit</a>
                                                <input type="hidden" name="_method" value="DELETE">
                                                <button type="submit" class="btn btn-danger user_delete"
                                                    data-id="<%= user.id %>">Delete</button>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <script type="text/javaScript" src="/static/js/post.js"></script>
</body>

</html>